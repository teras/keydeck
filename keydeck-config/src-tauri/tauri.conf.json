{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "keydeck-config",
  "version": "0.1.0",
  "identifier": "com.teras.keydeck-config",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "KeyDeck Configuration",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "dragDropEnabled": false,
        "visible": false,
        "backgroundColor": "#1e1e1e"
      },
      {
        "label": "splashscreen",
        "title": "Loading...",
        "width": 400,
        "height": 300,
        "decorations": false,
        "resizable": false,
        "center": true,
        "url": "splashscreen.html",
        "alwaysOnTop": true,
        "backgroundColor": "#1e1e1e"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "depends": ["keydeck"]
      },
      "rpm": {
        "depends": ["keydeck"]
      }
    }
  }
}
